@model PLPointTrackingSystem.Models.PLM.UploadReviewViewModel
    <link rel="stylesheet" href="~/css/stylesheet.css" />



<h3>Uploaded Data Below. Please review before moving forward. <br /> If these looks incorrect, please press delete and re-upload at the "Getting Started" page. <br />
    If everything looks good, please proceed to the Meet Info Form below.</h3>

<br />

<a asp-controller ="PLM" asp-action="MeetInfoForm">MEET INFO FORM</a>
<a asp-controller="FileUpload" asp-action="RevertUpload">DELETE INFO</a>

<div id="testUpload">
  
    @if (Model.FileData.Count > 0)
    {
        <hr />

        <table>

            <tr>
                <td>Name</td>
                <td>FED Member ID</td>
                <td>Age</td>
                <td>Divsions</td>
                <td>Weight Class</td>
                <td>Club</td>
                <td>Gender</td>
                <td>Squat Opener</td>
                <td>Bench Opener</td>
                <td>Deadlift Opener</td>
            </tr>

            @foreach (var item in @Model.FileData)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.MemberID</td>
            <td>@item.Age</td>
            <td>@item.DivisionString</td>
            <td>@item.WeightClass</td>
            <td>@item.Club</td>
            <td>@item.Gender</td>
            <td>@item.Squat_Opener</td>
            <td>@item.Bench_Opener</td>
            <td>@item.Deadlift_Opener</td>
        </tr>
            }

        </table>
    }
</div>