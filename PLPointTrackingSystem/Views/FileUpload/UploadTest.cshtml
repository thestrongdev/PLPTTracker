@{
}
@model PLPointTrackingSystem.Models.PLM.UploadTestViewModel
    <link rel="stylesheet" href="~/css/stylesheet.css" />

<div id="testUpload">
    @* show list of data here *@

    @if (Model.FileData.Count > 0)
    {
        <hr />

        <table>

            <tr>
                <td>Name</td>
                <td>City</td>
                <td>Age</td>
                <td>Food</td>
            </tr>

            @foreach (var item in @Model.FileData)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                    <td>@item.Age</td>
                    <td>@item.Food</td>
                </tr>
            }

        </table>
    }
</div>